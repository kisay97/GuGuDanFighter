<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estsoft.gugudanfighter.ResultActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="다시 게임을 시작하시겠습니까?"
        android:id="@+id/resultText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/restartYesButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/resultText"
        android:layout_alignRight="@+id/resultText"
        android:layout_alignEnd="@+id/resultText"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/restartNoButton"
        android:layout_alignBottom="@+id/restartYesButton"
        android:layout_toLeftOf="@+id/restartYesButton"
        android:layout_toStartOf="@+id/restartYesButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="맞춘개수 20/21"
        android:id="@+id/resultLabel"
        android:layout_above="@+id/resultText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />
</RelativeLayout>
